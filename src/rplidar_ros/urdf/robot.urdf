<?xml version="1.0"?>  
<robot name="robot">  
  <link name="base_link">  
    <visual>  
      <geometry>  
        <box size="0.7 0.33 0.08"/>  
    </geometry>  
    <origin rpy="0 0 0" xyz="0 0 0"/>  
    <material name="blue">  
        <color rgba="0 0 .8 1"/>  
    </material>  
    </visual>  
 </link>

 <link name="left_front_wheel">
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <origin rpy="1.57075 0 0" xyz="0 0.04 0"/>
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>  

  <joint name="base_to_left_front" type="continuous">
   <parent link="base_link"/>
   <child link="left_front_wheel"/>
   <origin xyz="0.35 0.165 0"/>
  </joint>

 <link name="right_front_wheel">
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <origin rpy="1.57075 0 0" xyz="0 -0.04 0"/>
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>  

  <joint name="base_to_right_front" type="continuous">
   <parent link="base_link"/>
   <child link="right_front_wheel"/>
   <origin xyz="0.35 -0.165 0"/>
  </joint>

  <link name="left_back_wheel">
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <origin rpy="1.57075 0 0" xyz="0 0.04 0"/>
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>  

  <joint name="base_to_left_back" type="continuous">
   <parent link="base_link"/>
   <child link="left_back_wheel"/>
   <origin xyz="-0.35 0.165 0"/>
  </joint>

 <link name="right_back_wheel">
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <origin rpy="1.57075 0 0" xyz="0 -0.04 0"/>
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>  

  <joint name="base_to_right_back" type="continuous">
   <parent link="base_link"/>
   <child link="right_back_wheel"/>
   <origin xyz="-0.35 -0.165 0"/>
  </joint>

  <link name="support_box">
   <visual>
    <geometry>
     <box size="0.13 0.10 0.11"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.055"/>
    <material name="white">
     <color rgba="1 1 1 1"/>
    </material>
   </visual>
  </link>

  <joint name="base_to_box" type="fixed">
   <parent link="base_link"/>
   <child link="support_box"/>
   <origin xyz="0 0 0.04"/>
  </joint>

  <link name="laser">
   <visual>
    <geometry>
     <sphere radius="0.04"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <material name="black">
     <color rgba="0 0 0 1"/>
    </material>
   </visual>
  </link>

  <joint name="box_to_laser" type="continuous">
   <parent link="support_box"/>
   <child link="laser"/>
   <origin xyz="0 0 0.11"/>
  </joint>

</robot>
